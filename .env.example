# --- Server ---
LOG_LEVEL=INFO
DEBUG_LOG_CONSOLE=false
PORT=8000
HOST=0.0.0.0

# --- Auth (Bearer) ---
# Single shared bearer for local/dev. Use a real auth system in production.
API_BEARER_TOKENS=["change-me"]

# --- Models ---
TARGET_MODEL_DEFAULT=openai:gpt-4o-mini
# Judge is fixed in code; changing is unsupported, but documented here for clarity:
JUDGE_MODEL_ID=openai:gpt-5-judge

# --- Providers ---
OPENROUTER_API_KEY=sk-or-change-me

# --- GEPA Controls ---
MAX_ITERATIONS=4
SSE_BUFFER_SIZE=256
SSE_BACKPRESSURE_FAIL_TIMEOUT_S=3

# --- CORS ---
CORS_ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
